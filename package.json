{
  "name": "@frontegg/nextjs",
  "version": "1.0.0",
  "author": "Frontegg LTD",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna run clean && rm -rf ./node_modules && rm -rf ./dist",
    "postinstall": "node scripts/link.js",
    "dev": "lerna run build:watch --stream --scope '@frontegg/nextjs'",
    "demo": "lerna run dev --stream --scope '@frontegg/demo-saas'",
    "demo12": "lerna run dev --stream --scope '@frontegg/demo-saas-next12'",
    "build": "cross-env NODE_ENV='production' lerna run build --stream --ignore '@frontegg/demo-saas' --ignore '@frontegg/demo-saas-next12'",
    "test": "jest ./packages/nextjs/test/**",
    "start:mock-server": "node tests/mock-server.js",
    "start:test-demo12": "concurrently \"yarn start:mock-server\" \"yarn demo12\"",
    "test-middleware": "export FRONTEGG_TEST_URL='http://localhost:3001' export DEBUG=pw:webserver && yarn build && npx playwright test",
    "prettier-hook": "prettier --config ./.prettierrc --write .",
    "prettier-check-hook": "prettier --config ./.prettierrc --check ."
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "cross-env": "^7.0.3",
    "concurrently": "^7.6.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^13.9.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.17.0",
    "express": "^4.18.2",
    "history": "^4.9.0",
    "jest": "^29.3.1",
    "lerna": "6.2.0",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.3.0",
    "tslint": "^6.1.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-object-assign": "^7.18.6",
    "@babel/plugin-transform-react-constant-elements": "^7.20.2",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-optimize-clsx": "^2.6.2",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24"
  },
  "nyc": {
    "reporter": [
      "html"
    ]
  },
  "pre-commit": [
    "test",
    "prettier-check-hook"
  ],
  "workspaces": [
    "packages/*"
  ]
}
